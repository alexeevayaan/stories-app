{
  "expo": {
    "name": "stories-app",
    "slug": "stories-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "storiesapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.anonymous.storiesapp"
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.anonymous.storiesapp"
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      [
        "expo-font",
        {
          "fonts": [
            "./src/shared/assets/fonts/Roboto-Black.ttf",
            "./src/shared/assets/fonts/Roboto-BlackItalic.ttf",
            "./src/shared/assets/fonts/Roboto-Bold.ttf",
            "./src/shared/assets/fonts/Roboto-BoldItalic.ttf",
            "./src/shared/assets/fonts/Roboto-ExtraBold.ttf",
            "./src/shared/assets/fonts/Roboto-ExtraBoldItalic.ttf",
            "./src/shared/assets/fonts/Roboto-ExtraLight.ttf",
            "./src/shared/assets/fonts/Roboto-ExtraLightItalic.ttf",
            "./src/shared/assets/fonts/Roboto-Italic.ttf",
            "./src/shared/assets/fonts/Roboto-Light.ttf",
            "./src/shared/assets/fonts/Roboto-LightItalic.ttf",
            "./src/shared/assets/fonts/Roboto-Medium.ttf",
            "./src/shared/assets/fonts/Roboto-MediumItalic.ttf",
            "./src/shared/assets/fonts/Roboto-Regular.ttf",
            "./src/shared/assets/fonts/Roboto-SemiBold.ttf",
            "./src/shared/assets/fonts/Roboto-SemiBoldItalic.ttf",
            "./src/shared/assets/fonts/Roboto-Thin.ttf",
            "./src/shared/assets/fonts/Roboto-ThinItalic.ttf",
            "./src/shared/assets/fonts/RubikStorm-Regular.ttf",
            "./src/shared/assets/fonts/BetaniaPatmosIn-Regular.ttf",
            "./src/shared/assets/fonts/BitcountGridDouble-Medium.ttf",
            "./src/shared/assets/fonts/Bungee-Regular.ttf",
            "./src/shared/assets/fonts/DancingScript-Regular.ttf",
            "./src/shared/assets/fonts/Pacifico-Regular.ttf"
          ]
        }
      ],
      [
        "expo-router",
        {
          "root": "app"
        }
      ],
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    }
  }
}
